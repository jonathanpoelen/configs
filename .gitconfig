[user]
	name = Jonathan Poelen
	email = jonathan.poelen@gmail.com
	logallrefupdates = true
[core]
	#pager = cat
	#pager = perl -I/usr/share/git/diff-highlight /home/jonathan/game/diff-so-fancy | less
	#pager = delta
	whitespace = -trailing-space

#[apply]
#  whitespace = fix

[diff]
  noprefix = true
  suppressBlankEmpty = true
  indentHeuristic = true
  #wordRegex = .
  mnemonicPrefix = true
  # colorMoved = no default plain zebra dimmed_zebra
  colorMoved = plain

[color]
	diff = auto
	ui = auto
[color "branch"]
	upstream = cyan
[push]
	default = simple
[pull]
	# merges, interactive, true, false
	rebase=merges
[pager]
	branch = false
	diff = delta
	#status = less -FX
[branch]
    autoSetupMerge=always

[delta]
	plus-color = "#012800"
	minus-color = "#340001"
	# syntax-theme = Dracula

	navigate = false
	inspect-raw-lines = false
	# line-numbers = true
	# diff-so-fancy = true
	# side-by-side = true

	# decorations
	# file-style = none
	# file-decoration-style = none
	minus-style = syntax auto

[interactive]
	diffFilter = delta --color-only
