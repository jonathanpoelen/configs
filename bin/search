#!/bin/sh

usage='usage [-d][-e][-i][-p path] filtername [...]
 -e extension only
 -i insensitive case
 -d display command'

[ $# = '0' ] && echo $usage && exit 1

opt_pattern=-name
path=.
ext_only=
display=
while getopts 'deip:' optname
do
	case "$optname" in
	'i')
	opt_pattern=-iname
		;;
	'p')
	path=$OPTARG
		;;
	'e')
	ext_only=1
		;;
	'd')
	display=1
		;;
	'?' | ':')
		echo $usage
		exit 100
		;;
	esac
done
shift $(($OPTIND-1))

if [ "$ext_only" = '1' ]
then
	p="$path $opt_pattern '*\.$1'"
	shift 1
	while [ $# != 0 ] ; do
		p="$p -or $opt_pattern '*\.$1'"
		shift 1
	done
else
	p="$path $opt_pattern '*$1*'"
	shift 1
	while [ $# != 0 ] ; do
		p="$p -or $opt_pattern '*$1*'"
		shift 1
	done
fi

[ "$display" = '1' ] && echo find $p || eval find $p

exit $?
