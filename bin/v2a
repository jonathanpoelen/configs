#!/usr/bin/env zsh
set -e

typeset -i inplace=0
if [[ $1 = -i ]]; then
  inplace=1
  shift
fi

if (( $# < 1 )) ; then
  echo -E 'Convert a video file to an audio file

usage: v2a infile [outfile] [ffmpeg options]...
usage: v2a -i infile [ffmpeg options]...

declare FORCE_INPLACE=1 environment variable for forced replacement in-place'
  exit 1
fi

input=$1
if (( inplace == 0 )); then
  if [[ -z $2 ]]; then
    output=${1:r}.mp4
  elif [[ -d $2 ]]; then
    output=$2/${1:t:r}
  else
    output=$2
  fi

  if [[ $input -ef $output ]]; then
    if (( FORCE_INPLACE != 1 )) ; then
      echo -n "Edit file in-place? [y/n] "
      read -q || exit 2
    fi
    inplace=1
  fi
  (( $# = 1 )) && shift || shift 2
else
  shift
fi

if (( inplace == 1 )); then
  output=$input.$RANDOM-$$.mp4
  ffmpeg -i $input $@ -vn $output
  mv $output $input
else
  # -vn disable video recording
  ffmpeg -i $input $@ -vn $output
fi

# -af 'volume=+10dB'
# ffmpeg -i "$1" -vn -acodec wmav2 "$output"
# ffmpeg -i "$1" -vn -vcodec libx264 -crf 20
# ffmpeg -i video.avi -codec:v copy -codec:a copy video.mp4
