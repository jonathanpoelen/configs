#!/bin/zsh

{ sleep 2; tail -f /home/jonathan/rawdisk/music-control | socat -u - /home/jonathan/rawdisk/music-control.sck }&
mpv --no-resume-playback --quiet --shuffle --idle=yes --input-ipc-server=/home/jonathan/rawdisk/music-control.sck --no-video ~/mocplaylist.m3u --no-input-terminal --demuxer-lavf-buffersize=262144
# --audio-channels=mono
